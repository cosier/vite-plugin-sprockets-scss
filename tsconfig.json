// .vite/plugins/sprockets-scss/tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@test/*": ["test/*"],
      "bun:test": ["node_modules/bun-types/test"]
    },
    "types": ["bun-types"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
